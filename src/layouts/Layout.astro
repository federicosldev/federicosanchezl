			src="https://analytics.ahrefs.com/analytics.js"
			data-key="WlMxEDp7J/0hRGRDfu2Jww"
			async></script>
	</head>
	<body>
		<Header />
		<CustomCursor />
		<main>
			<slot />
			<script>
				import { initLenis } from '../utils/lenis';
				import { DOMReady } from '../components/title-animation.js';

				// Inicializar Lenis para scroll suave
				initLenis();

				// Asegurar que los elementos sean visibles antes de animar
				function makeContentVisible() {
					document
						.querySelectorAll(
							'.section-header, .animated-title, .animated-text',
						)
						.forEach(el => {
							el.style.opacity = '1';
							el.style.visibility = 'visible';
						});
				}

				function initWithRetry() {
					try {
						DOMReady();
					} catch (error) {
						console.error(
							'Error inicializando animaciones:',
							error,
						);
						setTimeout(initWithRetry, 100);
					}
				}

				// Ejecutar animaciones al cargar el DOM
				document.addEventListener('DOMContentLoaded', () => {
					makeContentVisible();
					setTimeout(initWithRetry, 50);
				});

				// Para transiciones de página en Astro
				document.addEventListener('astro:page-load', () => {
					setTimeout(() => {
						makeContentVisible();
						initWithRetry();
						ScrollTrigger.refresh(); // Refrescar GSAP ScrollTrigger
					}, 50);
				});

				// Backup para asegurar visibilidad tras carga completa
				window.addEventListener('load', () => {
					makeContentVisible();
					if (window.innerWidth > 1200) {
						setTimeout(initWithRetry, 50);
					}
				});

				// Manejo de resize para alternar visibilidad en mobile/desktop
				window.addEventListener('resize', () => {
					if (window.innerWidth <= 1200) {
						makeContentVisible();
					}
				});
			</script>
		</main>
	</body><style is:global>
		@font-face {
			font-family: 'Menda';
			src: url('/fonts/menda-extrabold.woff') format('woff');
			font-weight: bold;
			font-style: normal;
		}
		@font-face {
			font-family: 'Monigue';
			src: url('/fonts/monigue.woff') format('woff');
			font-weight: bold;
			font-style: normal;
		}
		@font-face {
			font-family: 'Cssglykeregular';
			src: url('https://nueva-web-three.vercel.app/fonts/cssglykeregular.woff')
				format('woff');
			font-weight: bold;
			font-style: normal;
		}
		h1,
		h2,
		h3,
		h4 {
			font-family: 'Monigue', sans-serif;
		}
		p,
		li,
		button,
		form,
		table {
			font-family: 'Darker Grotesque', sans-serif;
			font-optical-sizing: auto;
			font-weight: <weight>;
			font-style: normal;
			color: #6976df;
		}
		a {
			font-family: 'Darker Grotesque', sans-serif;
			font-optical-sizing: auto;
			font-weight: <weight>;
			font-style: normal;
		}
		html {
			font-family: system-ui, sans-serif;
			background: #131217;
			overflow-x: hidden;
		}
		body {
			overflow-x: hidden !important;
		}
		body {
			cursor:
				url('/custom-cursor_1.png') 16 16,
				auto;
		}
		ul li::marker {
			color: #6976df;
		}

		ol li::marker {
			color: #6976df;
		}
		/* body {
			max-width: 1600px;
			margin: 0 auto;
		} */
		/* CARRUSEL TEXT*/
		@keyframes scroll {
			0% {
				transform: translateX(0);
			}
			100% {
				transform: translateX(-50%);
			}
		}

		@keyframes scroll-reverse {
			0% {
				transform: translateX(0);
			}
			100% {
				transform: translateX(-50%);
			}
		}

		.animate-scroll {
			animation: scroll 20s linear infinite;
		}

		.animate-scroll-reverse {
			animation: scroll-reverse 20s linear infinite;
		}

		.whitespace-nowrap {
			white-space: nowrap;
		}

		/* Estilo para las flechas */
		.swiper-button-next,
		.swiper-button-prev {
			color: #6976df !important;
			font-size: 2rem;
			z-index: 10;
		}

		.swiper-button-next:hover,
		.swiper-button-prev:hover {
			color: #efa6f5 !important;
		}

		.swiper-pagination-bullet {
			background-color: #6976df !important;
		}
		.swiper-pagination-bullet:hover {
			background-color: #efa6f5 !important;
		}
		@keyframes spin {
			from {
				transform: rotate(0deg);
			}
			to {
				transform: rotate(360deg);
			}
		}
		.animate-spin-slow {
			animation: spin 8s linear infinite;
		}
		#floating-scroll .rotating-image {
			transform-origin: center;
		}
		.wrapper {
			overflow: hidden;
		}
		.demo-gallery ul {
			display: flex;
			width: fit-content;
		}
		.demo-gallery li {
			flex-shrink: 0;
		}
		/* Cambiar el color de la barra de desplazamiento */
		::-webkit-scrollbar {
			width: 8px;
		}

		/* Cambiar el color del "pulgar" (la parte que se mueve) */
		::-webkit-scrollbar-thumb {
			background-color: #6976df;
		}

		/* Cambiar el color de la pista de la barra de desplazamiento */
		::-webkit-scrollbar-track {
			background-color: #131217;
		}

		input::placeholder {
			color: #6976df;
			opacity: 1;
		}
		input::-webkit-input-placeholder {
			color: #6976df;
		}
		input:-ms-input-placeholder {
			color: #6976df;
		}
		textarea::placeholder {
			color: #6976df;
			opacity: 1;
		}
		textarea::-webkit-input-placeholder {
			color: #6976df;
		}
		textarea:-ms-input-placeholder {
			color: #6976df;
		}
		::selection {
			background-color: #6976df;
			color: #fff;
		}
		.filter-btn.active {
			@apply bg-primary-purple text-white;
		}
		.filter-btn:not(.active) {
			@apply bg-purple-bg text-light-purple hover:bg-primary-purple;
		}
		/* Hide animated elements until animations are initialized */
		.animated-title,
		.animated-text {
			visibility: hidden;
		}

		/* Show elements once animations are ready */
		.animations-ready .animated-title,
		.animations-ready .animated-text {
			visibility: visible;
		}

		/* Title specific styles - overflow visible */
		.animated-title .word-wrapper {
			display: inline-block;
			overflow: visible; /* Titles have visible overflow */
			vertical-align: top;
		}

		/* Paragraph specific styles - overflow hidden */
		.animated-text .word-wrapper {
			display: inline-block;
			overflow: hidden; /* Paragraphs have hidden overflow */
			vertical-align: top;
		}

		.animated-title .word,
		.animated-text .word {
			display: inline-block;
		}
		.section-header {
			opacity: 0;
			visibility: hidden;
		}
		.home-image {
			position: relative;
			z-index: 1;
		}
		/* Asegurarse de que los contenedores no corten el contenido durante la animación */
		.hero-title,
		.hero-img,
		.hero-text {
			overflow: visible !important;
		}

		/* Asegurarse de que los contenedores padre también tengan overflow visible */
		.hero-section,
		.hero-container,
		[class*='hero-'] {
			overflow: visible !important;
		}

		/* Estilos para la animación de palabras */
		.hero-text .word-wrapper {
			display: inline-block;
			overflow: hidden;
			margin-right: 0.25em;
		}

		.hero-text .word {
			display: inline-block;
		}
	</style>
</html>
